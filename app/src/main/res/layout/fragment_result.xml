<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ResultFragment">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="423dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="390dp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="20sp"
            android:src="@drawable/winner" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80sp"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="20sp"
            android:text="Congratulations !"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/score"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110sp"
            android:layout_marginLeft="110sp"
            android:layout_marginTop="10sp"
            android:text="you got 5 out of 10 "
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView

                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="25sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="15sp"
                    android:src="@drawable/right" />

                <TextView
                    android:id="@+id/correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginTop="15sp"
                    android:text="5 correct"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/linearLayout2"

                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/incorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130sp"
                    android:layout_marginLeft="130sp"
                    android:layout_marginTop="5sp"
                    android:text="5 wrong"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

                <ImageView

                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="8sp"
                    android:src="@drawable/wrong" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/exploreBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Explore for more information"
    android:background="@color/black"
     android:textSize="@dimen/_18sdp"
    android:textColor="@color/white"
    android:layout_margin="@dimen/_16sdp"/>



        <LinearLayout
            android:id="@+id/replay"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"

            tools:ignore="MissingConstraints">


            <ImageView

                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="100sp"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="8sp"
                android:src="@drawable/repeat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Replay Quiz"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:textStyle="normal" />




        </LinearLayout>



    </LinearLayout>



</LinearLayout>